{
  "name": "webphone-lib",
  "version": "0.3.0",
  "description": "Webphone Lib",
  "author": "Open VoIP Alliance",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -fR dist/* build/*",
    "build": "npm run clean && rollup -c",
    "build-watch": "npm run clean && rollup -cw",
    "serve": "serve -l 1235",
    "demo": "run-p build-watch serve",
    "typecheck": "tsc",
    "lint": "eslint \"src/**/*.ts\"",
    "prepare": "npm run lint && npm run build",
    "test": "ava",
    "test-coverage": "nyc ava",
    "test-watch": "ava --watch",
    "docs": "typedoc --out docs src",
    "run-e2e-tests-in-docker": "docker-compose up --exit-code-from"
  },
  "ava": {
    "files": [
      "test/**/*.ts"
    ],
    "extensions": {
      "ts": "commonjs"
    },
    "nodeArguments": [
      "--import=tsx"
    ],
    "require": [
      "./test/_setup-browser-env.js"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "check-coverage": true,
    "include": [
      "src/**/*.ts"
    ]
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:open-voip-alliance/WebphoneLib.git"
  },
  "files": [
    "src",
    "dist",
    "test",
    "README.md"
  ],
  "dependencies": {
    "events": "^3.3.0",
    "p-retry": "^7.1.0",
    "p-timeout": "^7.0.1",
    "sip.js": "^0.21.2"
  },
  "devDependencies": {
    "@fast-check/ava": "^2.0.2",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@rollup/plugin-commonjs": "^28.0.8",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@types/events": "^3.0.3",
    "@types/sinon": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "ava": "^6.4.1",
    "base": "^0.13.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "fast-check": "^4.3.0",
    "globals": "^16.4.0",
    "happy-dom": "^20.0.5",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "nyc": "^17.1.0",
    "prettier": "^3.6.2",
    "pretty-quick": "^4.2.2",
    "rollup": "^4.52.5",
    "rollup-plugin-typescript2": "^0.36.0",
    "serve": "^14.2.5",
    "sinon": "^21.0.0",
    "tslib": "^2.8.1",
    "tsx": "^4.20.6",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3"
  }
}
